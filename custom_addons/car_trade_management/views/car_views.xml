<odoo>
    <data>
        <!-- List View -->
        <record id="car_trading_car_view_list" model="ir.ui.view">
            <field name="name">car.trading.car.view.list</field>
            <field name="model">car.trading.car</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="vin"/>
                    <field name="brand"/>
                    <field name="model"/>
                    <field name="year"/>
                    <field name="purchase_price"/>
                    <field name="sale_price"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="car_trading_car_view_form" model="ir.ui.view">
            <field name="name">car.trading.car.view.form</field>
            <field name="model">car.trading.car</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,purchased,available,sold"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="state == 'sold'"/>
                                <field name="vin" readonly="state == 'sold'"/>
                                <field name="brand" readonly="state == 'sold'"/>
                                <field name="model" readonly="state == 'sold'"/>
                                <field name="year" readonly="state == 'sold'"/>
                            </group>
                            <group>
                                <field name="purchase_order_id" readonly="state == 'sold'"/>
                                <field name="sale_order_id" readonly="state == 'sold'"/>
                                <field name="purchase_price" readonly="state == 'sold'"/>
                                <field name="sale_price" readonly="state == 'sold'"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="car_trading_car_action" model="ir.actions.act_window">
            <field name="name">Cars</field>
            <field name="res_model">car.trading.car</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
