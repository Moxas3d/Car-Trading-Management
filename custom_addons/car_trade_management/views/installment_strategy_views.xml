<odoo>
    <data>
        <!-- List View -->
        <record id="car_trading_installment_strategy_view_list" model="ir.ui.view">
            <field name="name">car.trading.installment.strategy.view.list</field>
            <field name="model">car.trading.installment.strategy</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="months"/>
                    <field name="bank_id"/>
                    <field name="down_payment_percent"/>
                    <field name="is_funded"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="car_trading_installment_strategy_view_form" model="ir.ui.view">
            <field name="name">car.trading.installment.strategy.view.form</field>
            <field name="model">car.trading.installment.strategy</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button
                                class="oe_stat_button"
                                type="object"
                                name="action_open_bank"
                                icon="fa-university"
                                invisible="bank_count == 0"
                            >
                                <field
                                    name="bank_count"
                                    widget="statinfo"
                                    string="Bank"
                                />
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="months"/>
                            <field name="bank_id"/>
                            <field name="down_payment_percent"/>
                            <field name="bank_interest_rate"/>
                            <field name="company_funding_amount"/>
                            <field name="is_funded"/>
                            <field name="active"/>
                        </group>
                    </sheet>
  <chatter/>
        </form>
            </field>
        </record>

        <!-- Action -->
        <record id="car_trading_installment_strategy_action" model="ir.actions.act_window">
            <field name="name">Installment Strategies</field>
            <field name="res_model">car.trading.installment.strategy</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
