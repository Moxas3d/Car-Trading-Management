<odoo>
    <data>
        <!-- List View -->
        <record id="car_trading_installment_view_list" model="ir.ui.view">
            <field name="name">car.trading.installment.view.list</field>
            <field name="model">car.trading.installment</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sale_id"/>
                    <field name="partner_id"/>
                    <field name="sequence"/>
                    <field name="amount"/>
                    <field name="due_date"/>
                    <field name="paid"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="car_trading_installment_view_form" model="ir.ui.view">
            <field name="name">car.trading.installment.view.form</field>
            <field name="model">car.trading.installment</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="due,overdue,paid" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="sale_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="bank_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="sequence" readonly="1"/>
                                <field name="amount" readonly="1"/>
                                <field name="due_date" readonly="1"/>
                                <field name="paid" readonly="sale_id_state == 'done'"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="car_trading_installment_action" model="ir.actions.act_window">
            <field name="name">Installments</field>
            <field name="res_model">car.trading.installment</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
